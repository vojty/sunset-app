{
  "name": "sunset-app",
  "description": "A simple tray app for Mac OS showing the current sunrise or sunset for given geolocation.",
  "productName": "SunsetApp",
  "author": {
    "name": "Tom치코 Vojt치코ek",
    "email": "vojtasek.tomas@gmail.com",
    "url": "https://vojty.github.io/"
  },
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "yarn build && electron ./dist/main.js",
    "package:arm64": "electron-packager ./ --platform=darwin --arch=arm64 --out=out --icon=./assets/icon.icns --overwrite",
    "package:x64": "electron-packager ./ --platform=darwin --arch=x64 --out=out --icon=./assets/icon.icns --overwrite",
    "package:all": "rimraf out && yarn build && yarn package:arm64 && yarn package:x64"
  },
  "devDependencies": {
    "@types/suncalc": "^1.8.1",
    "electron": "^16.0.6",
    "electron-packager": "^15.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "date-fns": "^2.28.0",
    "suncalc": "^1.8.0",
    "zod": "^3.11.6"
  }
}
